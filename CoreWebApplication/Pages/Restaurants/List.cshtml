@page
@model CoreWebApplication.Pages.Restaurants.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Restaurants</h1>

<form method="get">
    <div class="form-group">
        <div class="input-group">
            @* asp-for set the "name" and "value" of the controle *@
            <input type="search" class="form-control" asp-for="SearchTerm" />
            <span class="input-group-btn">
                <button class="fa fa-search" />
            </span>
        </div>
    </div>
</form>



@foreach (var restaurant in Model.restaurants)
{
    <partial name="_Summary" model="restaurant" />
}


<a asp-page=".\Edit" class="btn btn-primary">Add New</a>

<div>@Model.Message</div>
